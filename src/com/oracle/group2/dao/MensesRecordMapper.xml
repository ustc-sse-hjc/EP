<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://www.mybatis.org/dtd/mybatis-3.dtd">

<mapper namespace="com.oracle.group3.dao.MensesRecordMapper">
	<resultMap type="com.oracle.group3.domain.MensesRecord" id="mensesrecord">
	</resultMap>
	<insert id="insertMenses">
		insert into menses(uid,start,end) values(#{0},#{1},#{2});
	</insert>
	<select id="getMensesRecordById" resultMap="mensesrecord">
		select * from menses where uid = #{0};
	</select>
	<update id="updateMenses">
		update menses set end = #{1} where mid = #{0};
	</update>
	<delete id="deleteMenses">
		delete from menses where mid = #{0};
	</delete>
</mapper>